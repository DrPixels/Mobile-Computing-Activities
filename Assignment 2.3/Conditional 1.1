   <body>
      <p>ODD or EVEN</p>
      <p id="demo"></p>
      
   <script type = "text/javascript">
        
        var a = parseInt(prompt("Enter a number"));
        
        if (a % 2 == 0) {
            document.getElementById("demo").innerHTML = "Number is even";
        }
        
        else {
            document.getElementById("demo").innerHTML = "Number is odd";
        }
        
    </script>   
    
  </body>
</html>
